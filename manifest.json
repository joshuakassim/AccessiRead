{
  "manifest_version": 3,
  "name": "AccessiRead",
  "version": "1.0",
  "description": "Make any website readable for people with dyslexia, ADHD, and reading difficulties",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "commands": {
    "toggle-accessiread": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Toggle AccessiRead on/off"
    }
  }
}